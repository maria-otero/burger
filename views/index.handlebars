  <h1>Eat as many BURGERS as you want!</h1>

  <div class="jumbotron">

    <div class="row">
      <div class="col-5">

    <h3>Add a burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Type: </label>
          <input type="text" id="ca" name="name" class="inner-shadow">
        </div>

        <div class="form-group">
          <label for="devoured"></label><br>
          <input type="radio" name="devoured" value="1" checked> What are you waiting for? Eat me now!! <i class="far fa-smile"></i><br>
          <br>
          <input type="radio" name="devoured" value="0"> Eat me later... <i class="far fa-frown"></i>
          
        </div>
          <br>
        <button type="submit" class="btn">Add me!</button>
      </form>

      </div>


      <div class="col-7">

        <h3>Devoured Burgers!</h3>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devour=false}}
              {{/if}}
            {{/each}}
          </ul>
       
        <h3>Waiting to be devoured...</h3>
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=true}}
                {{/unless}}
              {{/each}}
            </ul>
      </div>
    </div>
  </div>
