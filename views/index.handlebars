  <h1>Eat as many BURGERS as you want!</h1>

  <div class="jumbotron">

    <div class="row">
      <div class="col-5">

    <h2>Add a burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Type: </label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured"></label><br>
          <input type="radio" name="devoured" value="1" checked> What are you waiting for? Eat me now!!<br>
          <input type="radio" name="devoured" value="0"> Eat me later...
          <br>
        </div>

        <button type="submit">Add</button>
      </form>

      </div>


      <div class="col-7">

        <h3>Devoured Burgers!</h3>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devour=false}}
              {{/if}}
            {{/each}}
          </ul>
       
        <h2>Waiting to be devoured...</h2>
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=true}}
                {{/unless}}
              {{/each}}
            </ul>
      </div>
    </div>
  </div>
